---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import HeroI18n from '../../components/HeroI18n.astro';
import AboutI18n from '../../components/AboutI18n.astro';
import TracksI18n from '../../components/TracksI18n.astro';
import Speakers from '../../components/Speakers.astro';
import { getCurrentLanguage, t } from '../../i18n/utils';

const lang = getCurrentLanguage(Astro.url);
---

<Layout title="AWS Student Community Day - Universidad de Antioquia">
  <Header />
  <main>
    <HeroI18n />
    <AboutI18n />
    <TracksI18n />
    <Speakers />
    
    <!-- Sponsors Section -->
    <section id="sponsors" class="sponsors">
      <div class="container">
        <div class="text-center">
          <div class="section-badge">
            <i class="fas fa-handshake"></i>
            <span>{t(lang, 'sponsors.badge')}</span>
          </div>
          
          <h2 class="section-title">
            {t(lang, 'sponsors.title')} <span class="gradient-text">{t(lang, 'sponsors.titleHighlight')}</span>
          </h2>
          
          <p class="section-description">
            {t(lang, 'sponsors.description')}
          </p>
        </div>
        
        <div class="sponsors-grid">
          <div class="sponsor-tier">
            <h3>{t(lang, 'sponsors.tiers.platinum')}</h3>
            <div class="sponsor-logos platinum">
              <div class="sponsor-card">
                <img src="/logo-amarillo.png" alt="AWS" />
                <h4>{t(lang, 'sponsors.aws.title')}</h4>
                <p>{t(lang, 'sponsors.aws.description')}</p>
              </div>
            </div>
          </div>
          
          <div class="sponsor-tier">
            <h3>{t(lang, 'sponsors.tiers.gold')}</h3>
            <div class="sponsor-logos gold">
              <div class="sponsor-card">
                <img src="/imagen-fuente-udea.jpg" alt="Universidad de Antioquia" />
                <h4>{t(lang, 'sponsors.udea.title')}</h4>
                <p>{t(lang, 'sponsors.udea.description')}</p>
              </div>
              <div class="sponsor-card">
                <div class="sponsor-placeholder">
                  <i class="fas fa-building"></i>
                  <span>{t(lang, 'sponsors.becomeSponsors.title')}</span>
                </div>
                <h4>{t(lang, 'sponsors.becomeSponsors.title')}</h4>
                <p>{t(lang, 'sponsors.becomeSponsors.description')}</p>
              </div>
            </div>
          </div>
          
          <div class="sponsor-tier">
            <h3>{t(lang, 'sponsors.tiers.community')}</h3>
            <div class="sponsor-logos community">
              <div class="partner-item">
                <i class="fab fa-github"></i>
                <span>GitHub Student Pack</span>
              </div>
              <div class="partner-item">
                <i class="fab fa-docker"></i>
                <span>Docker Community</span>
              </div>
              <div class="partner-item">
                <i class="fas fa-cloud"></i>
                <span>Cloud Native Foundation</span>
              </div>
              <div class="partner-item">
                <i class="fab fa-dev"></i>
                <span>Dev Community</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="sponsor-cta">
          <h3>{t(lang, 'sponsors.cta.title')}</h3>
          <p>{t(lang, 'sponsors.cta.description')}</p>
          <a href="mailto:sponsors@awscloudclub.com" class="btn btn-primary">
            <i class="fas fa-envelope"></i>
            {t(lang, 'sponsors.cta.button')}
          </a>
        </div>
      </div>
    </section>
    
    <!-- Location Section -->
    <section id="location" class="location">
      <div class="container">
        <div class="location-content">
          <div class="location-info">
            <div class="section-badge">
              <i class="fas fa-map-marker-alt"></i>
              <span>{t(lang, 'location.badge')}</span>
            </div>
            
            <h2 class="section-title text-left">
              {t(lang, 'location.title')} <span class="gradient-text">{t(lang, 'location.titleHighlight')}</span>
            </h2>
            
            <div class="venue-details">
              <div class="venue-item">
                <i class="fas fa-building"></i>
                <div>
                  <strong>{t(lang, 'location.venue.building')}</strong>
                  <span>{t(lang, 'location.venue.room')}</span>
                </div>
              </div>
              
              <div class="venue-item">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                  <strong>Dirección</strong>
                  <span>{t(lang, 'location.venue.address')}</span>
                </div>
              </div>
              
              <div class="venue-item">
                <i class="fas fa-parking"></i>
                <div>
                  <strong>Parqueadero</strong>
                  <span>{t(lang, 'location.venue.parking')}</span>
                </div>
              </div>
              
              <div class="venue-item">
                <i class="fas fa-bus"></i>
                <div>
                  <strong>Transporte Público</strong>
                  <span>{t(lang, 'location.venue.transport')}</span>
                </div>
              </div>
            </div>
            
            <div class="location-actions">
              <a href="https://maps.google.com/?q=Universidad+de+Antioquia+Medellin" target="_blank" class="btn btn-primary">
                <i class="fas fa-directions"></i>
                {t(lang, 'location.buttons.directions')}
              </a>
              <a href="#register" class="btn btn-secondary">
                <i class="fas fa-ticket-alt"></i>
                {t(lang, 'location.buttons.register')}
              </a>
            </div>
          </div>
          
          <div class="location-map">
            <div id="map" class="map-container">
              <!-- Map will be loaded here -->
            </div>
            <div class="map-overlay">
              <div class="map-info">
                <h4>{t(lang, 'location.mapInfo.title')}</h4>
                <p>{t(lang, 'location.mapInfo.subtitle')}</p>
                <span>{t(lang, 'location.mapInfo.date')}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Registration Section -->
    <section id="register" class="register">
      <div class="container">
        <div class="register-content">
          <div class="register-info">
            <h2>{t(lang, 'register.title')}</h2>
            <p>{t(lang, 'register.description')}</p>
            
            <div class="register-benefits">
              <div class="benefit-item">
                <i class="fas fa-check-circle"></i>
                <span>{t(lang, 'register.benefits.admission')}</span>
              </div>
              <div class="benefit-item">
                <i class="fas fa-check-circle"></i>
                <span>{t(lang, 'register.benefits.lunch')}</span>
              </div>
              <div class="benefit-item">
                <i class="fas fa-check-circle"></i>
                <span>{t(lang, 'register.benefits.certificate')}</span>
              </div>
              <div class="benefit-item">
                <i class="fas fa-check-circle"></i>
                <span>{t(lang, 'register.benefits.networking')}</span>
              </div>
              <div class="benefit-item">
                <i class="fas fa-check-circle"></i>
                <span>{t(lang, 'register.benefits.swag')}</span>
              </div>
            </div>
          </div>
          
          <div class="register-form">
            <div class="form-card">
              <h3>{t(lang, 'register.form.title')}</h3>
              <p>{t(lang, 'register.form.subtitle')}</p>
              
              <form class="registration-form">
                <div class="form-group">
                  <label for="name">{t(lang, 'register.form.fields.name')}</label>
                  <input type="text" id="name" name="name" required />
                </div>
                
                <div class="form-group">
                  <label for="email">{t(lang, 'register.form.fields.email')}</label>
                  <input type="email" id="email" name="email" required />
                </div>
                
                <div class="form-group">
                  <label for="university">{t(lang, 'register.form.fields.university')}</label>
                  <input type="text" id="university" name="university" required />
                </div>
                
                <div class="form-group">
                  <label for="track">{t(lang, 'register.form.fields.track')}</label>
                  <select id="track" name="track" required>
                    <option value="">{t(lang, 'register.form.options.selectTrack')}</option>
                    <option value="fundamentals">{t(lang, 'register.form.options.fundamentals')}</option>
                    <option value="devops">{t(lang, 'register.form.options.devops')}</option>
                    <option value="aiml">{t(lang, 'register.form.options.aiml')}</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label for="experience">{t(lang, 'register.form.fields.experience')}</label>
                  <select id="experience" name="experience" required>
                    <option value="">{t(lang, 'register.form.options.selectLevel')}</option>
                    <option value="beginner">{t(lang, 'register.form.options.beginner')}</option>
                    <option value="intermediate">{t(lang, 'register.form.options.intermediate')}</option>
                    <option value="advanced">{t(lang, 'register.form.options.advanced')}</option>
                  </select>
                </div>
                
                <div class="form-group checkbox-group">
                  <label class="checkbox-label">
                    <input type="checkbox" required />
                    <span class="checkmark"></span>
                    {t(lang, 'register.form.checkboxes.terms')}
                  </label>
                </div>
                
                <div class="form-group checkbox-group">
                  <label class="checkbox-label">
                    <input type="checkbox" />
                    <span class="checkmark"></span>
                    {t(lang, 'register.form.checkboxes.updates')}
                  </label>
                </div>
                
                <button type="submit" class="btn btn-primary btn-large">
                  <i class="fas fa-ticket-alt"></i>
                  {t(lang, 'register.form.button')}
                </button>
              </form>
              
              <div class="form-footer">
                <p>{t(lang, 'register.form.footer')}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <div class="brand-logo">
            <img src="/logo-blanco.png" alt="AWS Cloud Club" />
            <div class="brand-text">
              <span class="brand-title">{t(lang, 'footer.brand.title')}</span>
              <span class="brand-subtitle">{t(lang, 'footer.brand.subtitle')}</span>
            </div>
          </div>
          <p>{t(lang, 'footer.brand.description')}</p>
          
          <div class="social-links">
            <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
            <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" aria-label="GitHub"><i class="fab fa-github"></i></a>
            <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
          </div>
        </div>
        
        <div class="footer-links">
          <div class="link-group">
            <h4>{t(lang, 'footer.links.event.title')}</h4>
            <ul>
              <li><a href="#about">{t(lang, 'footer.links.event.about')}</a></li>
              <li><a href="#tracks">{t(lang, 'footer.links.event.tracks')}</a></li>
              <li><a href="#speakers">{t(lang, 'footer.links.event.speakers')}</a></li>
              <li><a href="#location">{t(lang, 'footer.links.event.location')}</a></li>
            </ul>
          </div>
          
          <div class="link-group">
            <h4>{t(lang, 'footer.links.community.title')}</h4>
            <ul>
              <li><a href="#">{t(lang, 'footer.links.community.join')}</a></li>
              <li><a href="#">{t(lang, 'footer.links.community.discord')}</a></li>
              <li><a href="#">{t(lang, 'footer.links.community.newsletter')}</a></li>
              <li><a href="#">{t(lang, 'footer.links.community.blog')}</a></li>
            </ul>
          </div>
          
          <div class="link-group">
            <h4>{t(lang, 'footer.links.resources.title')}</h4>
            <ul>
              <li><a href="#">{t(lang, 'footer.links.resources.freeTier')}</a></li>
              <li><a href="#">{t(lang, 'footer.links.resources.certification')}</a></li>
              <li><a href="#">{t(lang, 'footer.links.resources.documentation')}</a></li>
              <li><a href="#">{t(lang, 'footer.links.resources.support')}</a></li>
            </ul>
          </div>
          
          <div class="link-group">
            <h4>{t(lang, 'footer.links.contact.title')}</h4>
            <ul>
              <li><a href="mailto:info@awscloudclub.com">{t(lang, 'footer.links.contact.info')}</a></li>
              <li><a href="mailto:sponsors@awscloudclub.com">{t(lang, 'footer.links.contact.sponsorship')}</a></li>
              <li><a href="mailto:speakers@awscloudclub.com">{t(lang, 'footer.links.contact.speakers')}</a></li>
            </ul>
          </div>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>{t(lang, 'footer.bottom.copyright')}</p>
        <div class="footer-legal">
          <a href="#">{t(lang, 'footer.bottom.legal.privacy')}</a>
          <a href="#">{t(lang, 'footer.bottom.legal.terms')}</a>
          <a href="#">{t(lang, 'footer.bottom.legal.conduct')}</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>

<style>
  /* Incluir todos los estilos de las secciones anteriores */
  @import '../../pages/index.astro';
</style>
