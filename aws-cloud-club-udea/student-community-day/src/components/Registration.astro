---
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url);
---

<section id="register" class="register">
  <div class="container">
    <div class="register-content">
      <div class="register-info">
        <h2>{t(lang, 'registration.title')}</h2>
        <p>
          {t(lang, 'registration.description')}
        </p>
        
        <div class="register-benefits">
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{t(lang, 'registration.benefits.admission')}</span>
          </div>
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{t(lang, 'registration.benefits.lunch')}</span>
          </div>
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{t(lang, 'registration.benefits.certificate')}</span>
          </div>
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{t(lang, 'registration.benefits.networking')}</span>
          </div>
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{t(lang, 'registration.benefits.swag')}</span>
          </div>
        </div>
      </div>
      
      <div class="register-form">
        <div class="form-card">
          <h3>{t(lang, 'registration.form.title')}</h3>
          <p>{t(lang, 'registration.form.subtitle')}</p>
          
          <form class="registration-form">
            <div class="form-group">
              <label for="name">{t(lang, 'registration.form.fields.name')}</label>
              <input type="text" id="name" name="name" required />
            </div>
            
            <div class="form-group">
              <label for="email">{t(lang, 'registration.form.fields.email')}</label>
              <input type="email" id="email" name="email" required />
            </div>
            
            <div class="form-group">
              <label for="university">{t(lang, 'registration.form.fields.university')}</label>
              <input type="text" id="university" name="university" required />
            </div>
            
            <div class="form-group">
              <label for="track">{t(lang, 'registration.form.fields.track.label')}</label>
              <select id="track" name="track" required>
                <option value="">{t(lang, 'registration.form.fields.track.placeholder')}</option>
                <option value="fundamentals">{t(lang, 'registration.form.fields.track.options.fundamentals')}</option>
                <option value="devops">{t(lang, 'registration.form.fields.track.options.devops')}</option>
                <option value="aiml">{t(lang, 'registration.form.fields.track.options.aiml')}</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="experience">{t(lang, 'registration.form.fields.experience.label')}</label>
              <select id="experience" name="experience" required>
                <option value="">{t(lang, 'registration.form.fields.experience.placeholder')}</option>
                <option value="beginner">{t(lang, 'registration.form.fields.experience.options.beginner')}</option>
                <option value="intermediate">{t(lang, 'registration.form.fields.experience.options.intermediate')}</option>
                <option value="advanced">{t(lang, 'registration.form.fields.experience.options.advanced')}</option>
              </select>
            </div>
            
            <div class="form-group checkbox-group">
              <label class="checkbox-label">
                <input type="checkbox" required />
                <span class="checkmark"></span>
                {t(lang, 'registration.form.terms.text')} <a href="#" target="_blank">{t(lang, 'registration.form.terms.link')}</a>
              </label>
            </div>
            
            <div class="form-group checkbox-group">
              <label class="checkbox-label">
                <input type="checkbox" />
                <span class="checkmark"></span>
                {t(lang, 'registration.form.newsletter')}
              </label>
            </div>
            
            <button type="submit" class="btn btn-primary btn-large">
              <i class="fas fa-ticket-alt"></i>
              {t(lang, 'registration.form.submit')}
            </button>
          </form>
          
          <div class="form-footer">
            <p>{t(lang, 'registration.form.footer')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .register {
    background: var(--gradient-hero);
    color: var(--aws-white);
  }

  .register-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: flex-start;
  }

  .register-info h2 {
    color: var(--aws-white);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .register-info p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .register-benefits {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .benefit-item i {
    color: var(--aws-orange);
    font-size: 1.1rem;
    flex-shrink: 0;
  }

  .form-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    padding: 2rem;
  }

  .form-card h3 {
    color: var(--aws-white);
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
  }

  .form-card > p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
  }

  .registration-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    color: var(--aws-white);
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .form-group input,
  .form-group select {
    padding: 12px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    color: var(--aws-white);
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-group input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--aws-orange);
    background: rgba(255, 255, 255, 0.15);
  }

  .checkbox-group {
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    cursor: pointer;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .checkbox-label input[type="checkbox"] {
    display: none;
  }

  .checkmark {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .checkbox-label input[type="checkbox"]:checked + .checkmark {
    background: var(--aws-orange);
    border-color: var(--aws-orange);
  }

  .checkbox-label input[type="checkbox"]:checked + .checkmark::after {
    content: 'âœ“';
    color: var(--aws-white);
    font-weight: bold;
    font-size: 0.8rem;
  }

  .checkbox-label a {
    color: var(--aws-orange);
    text-decoration: underline;
  }

  .form-footer {
    margin-top: 1rem;
    text-align: center;
  }

  .form-footer p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
    margin: 0;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .register-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
