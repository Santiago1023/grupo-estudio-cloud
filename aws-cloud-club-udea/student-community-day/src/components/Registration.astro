---
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url);
---

<section id="register" class="register">
  <div class="container">
    <div class="register-content">
      <div class="register-info">
        <h2>{t(lang, 'registration.title')}</h2>
        <p>
          {t(lang, 'registration.description')}
        </p>
        
        <div class="register-benefits">
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{t(lang, 'registration.benefits.admission')}</span>
          </div>
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{t(lang, 'registration.benefits.networking')}</span>
          </div>
          <div class="benefit-item">
            <i class="fas fa-check-circle"></i>
            <span>{lang === 'es' ? 'Recursos de AWS' : 'AWS Resources'}</span>
          </div>
        </div>
      </div>
      
      <div class="register-cta">
        <div class="cta-card">
          <h3>{t(lang, 'registration.form.title')}</h3>
          <p>{t(lang, 'registration.form.subtitle')}</p>
          
          <a href="https://www.eventbrite.co/e/aws-student-community-day-tickets-1571952535349" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-large">
            <i class="fas fa-ticket-alt"></i>
            {t(lang, 'registration.form.submit')}
          </a>
          
          <div class="cta-footer">
            <p>{t(lang, 'registration.form.footer')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .register {
    background: var(--gradient-hero);
    color: var(--aws-white);
  }

  .register-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: flex-start;
  }

  .register-info h2 {
    color: var(--aws-white);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .register-info p {
    font-size: 1.1rem;
    color: var(--aws-white);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .register-benefits {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--aws-white);
  }

  .benefit-item i {
    color: var(--aws-orange);
    font-size: 1.1rem;
    flex-shrink: 0;
  }

  .cta-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    padding: 3rem 2rem;
    text-align: center;
  }

  .cta-card h3 {
    color: var(--aws-white);
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .cta-card > p {
    color: var(--aws-white);
    margin-bottom: 2.5rem;
    font-size: 1.1rem;
  }

  .btn-large {
    width: 100%;
    max-width: 300px;
    margin-bottom: 2rem;
  }

  .cta-footer {
    margin-top: 1rem;
    text-align: center;
  }

  .cta-footer p {
    color: var(--aws-white);
    font-size: 0.85rem;
    margin: 0;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .register-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .cta-card {
      padding: 2rem 1.5rem;
    }
  }
</style>
