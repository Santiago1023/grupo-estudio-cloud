      </div>
    </div>
  </div>
</section>

<style>
  .speakers {
    background: var(--aws-white);
    position: relative;
  }

  .section-description {
    font-size: 1.1rem;
    color: var(--aws-dark);
    max-width: 600px;
    margin: 0 auto 4rem;
    line-height: 1.6;
  }

  .speakers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .speaker-card {
    background: var(--aws-white);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--aws-gray-light);
    transition: all 0.3s ease;
  }

  .speaker-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .speaker-image {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .speaker-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .speaker-card:hover .speaker-image img {
    transform: scale(1.05);
  }

  .speaker-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(35, 47, 62, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .speaker-card:hover .speaker-overlay {
    opacity: 1;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 45px;
    height: 45px;
    background: var(--aws-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--aws-navy);
    font-size: 1.2rem;
    transition: all 0.3s ease;
    transform: translateY(20px);
  }

  .speaker-card:hover .social-links a {
    transform: translateY(0);
  }

  .social-links a:hover {
    background: var(--aws-orange);
    color: var(--aws-white);
    transform: translateY(-3px);
  }

  .speaker-info {
    padding: 2rem;
  }

  .speaker-info h3 {
    font-size: 1.4rem;
    color: var(--aws-navy);
    margin-bottom: 0.5rem;
  }

  .speaker-title {
    font-size: 1rem;
    color: var(--aws-blue);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .speaker-company {
    font-size: 0.9rem;
    color: var(--aws-orange);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .speaker-bio {
    color: var(--aws-dark);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .speaker-topics {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .topic-tag {
    background: var(--aws-gray-light);
    color: var(--aws-navy);
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 500;
    border: 1px solid var(--aws-gray);
    transition: all 0.3s ease;
  }

  .topic-tag:hover {
    background: var(--aws-blue);
    color: var(--aws-white);
    border-color: var(--aws-blue);
  }

  .speaker-session {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background: var(--aws-gray-light);
    border-radius: 8px;
    border-left: 4px solid var(--aws-orange);
  }

  .speaker-session i {
    color: var(--aws-orange);
    font-size: 0.9rem;
  }

  .speaker-session span {
    color: var(--aws-navy);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .speakers-cta {
    text-align: center;
    padding: 3rem;
    background: var(--gradient-hero);
    border-radius: 16px;
    color: var(--aws-white);
    position: relative;
    overflow: hidden;
  }

  .speakers-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 50%, rgba(255, 153, 0, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .cta-content {
    position: relative;
    z-index: 1;
  }

  .cta-content h3 {
    font-size: 2rem;
    color: var(--aws-white);
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .speakers-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .speaker-image {
      height: 200px;
    }

    .speaker-info {
      padding: 1.5rem;
    }

    .social-links {
      gap: 0.75rem;
    }

    .social-links a {
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }

    .speakers-cta {
      padding: 2rem;
    }

    .cta-content h3 {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .speakers-grid {
      grid-template-columns: 1fr;
    }

    .speaker-card {
      margin: 0 auto;
      max-width: 100%;
    }

    .speaker-topics {
      justify-content: center;
    }

    .speaker-session {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
  }
</style>
