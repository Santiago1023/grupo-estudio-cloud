---
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url);

const response = await fetch('https://sessionize.com/api/v2/u33lk5c0/view/SpeakerWall');
const speakers = await response.json();
---

<section id="speakers" class="speakers">
  <div class="container">
    <div class="text-center">
      <div class="section-badge">
        <i class="fas fa-microphone"></i>
        <span>{t(lang, 'speakers.badge')}</span>
      </div>
      
      <h2 class="section-title">
        {t(lang, 'speakers.title')} <span class="gradient-text">{t(lang, 'speakers.titleHighlight')}</span>
      </h2>
      
      <p class="section-description">
        {t(lang, 'speakers.description')}
      </p>
    </div>
    
    <div class="speakers-grid">
      {speakers.map((speaker: any) => (
        <div class="speaker-card">
          <div class="speaker-image">
            <img src={speaker.profilePicture} alt={speaker.fullName} />
          </div>
          
          <div class="speaker-info">
            <h3>{speaker.fullName}</h3>
            <p class="speaker-tagline">{speaker.tagLine}</p>
          </div>
        </div>
      ))}
    </div>
    
    <div class="speakers-cta">
      <h3>{t(lang, 'speakers.cta.title')}</h3>
      <p>{t(lang, 'speakers.cta.description')}</p>
      <a href="https://sessionize.com/aws-student-community-day-2025-medelli" target="_blank" class="btn btn-primary">
        <i class="fas fa-paper-plane"></i>
        {t(lang, 'speakers.cta.button')}
      </a>
    </div>
  </div>
</section>

<style>
  .speakers {
    background: var(--aws-white);
  }

  .speakers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.2rem;
    margin-top: 4rem;
    margin-bottom: 4rem;
  }

  .speaker-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
  }

  .speaker-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--aws-orange), var(--aws-dark-blue));
  }

  .speaker-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  .speaker-image {
    position: relative;
    overflow: hidden;
    height: 160px;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .speaker-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .speaker-card:hover .speaker-image img {
    transform: scale(1.05);
  }

  .speaker-info {
    padding: 1rem;
    text-align: center;
  }

  .speaker-info h3 {
    font-size: 1.2rem;
    color: var(--aws-dark-blue);
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .speaker-tagline {
    color: var(--aws-orange);
    font-weight: 600;
    font-size: 0.9rem;
    margin: 0;
  }

  .speakers-cta {
    text-align: center;
    padding: 3rem;
    background: var(--gradient-primary);
    border-radius: 16px;
    color: var(--aws-white);
    margin-top: 2rem;
  }

  .speakers-cta h3 {
    color: var(--aws-white);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .speakers-cta p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .speakers-grid {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 1rem;
    }

    .speaker-image {
      height: 140px;
    }

    .speaker-info {
      padding: 0.8rem;
    }
  }
</style>
