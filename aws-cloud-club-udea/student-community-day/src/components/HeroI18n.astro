---
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url);
---

<section id="home" class="hero">
  <div class="hero-background">
    <div class="hero-overlay"></div>
    <div class="hero-particles"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <div class="hero-badge">
        <i class="fas fa-calendar-alt"></i>
        <span>{t(lang, 'hero.badge')}</span>
      </div>
      
      <h1 class="hero-title">
        {t(lang, 'hero.title')}
        <span class="gradient-text">{t(lang, 'hero.titleHighlight')}</span>
      </h1>
      
      <p class="hero-description">
        {t(lang, 'hero.description')}
      </p>
      
      <div class="hero-stats">
        <div class="stat-item">
          <div class="stat-number">3</div>
          <div class="stat-label">{t(lang, 'hero.stats.tracks')}</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">8+</div>
          <div class="stat-label">{t(lang, 'hero.stats.speakers')}</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">200+</div>
          <div class="stat-label">{t(lang, 'hero.stats.attendees')}</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">{lang === 'es' ? 'Gratis' : 'Free'}</div>
          <div class="stat-label">{t(lang, 'hero.stats.registration')}</div>
        </div>
      </div>
      
      <div class="hero-actions">
        <a href="#register" class="btn btn-primary btn-large">
          <i class="fas fa-ticket-alt"></i>
          {t(lang, 'hero.buttons.register')}
        </a>
        <a href="#about" class="btn btn-outline btn-large">
          <i class="fas fa-info-circle"></i>
          {t(lang, 'hero.buttons.learnMore')}
        </a>
      </div>
      
      <div class="hero-info">
        <div class="info-item">
          <i class="fas fa-clock"></i>
          <span>{t(lang, 'hero.info.time')}</span>
        </div>
        <div class="info-item">
          <i class="fas fa-map-marker-alt"></i>
          <span>{t(lang, 'hero.info.location')}</span>
        </div>
        <div class="info-item">
          <i class="fas fa-users"></i>
          <span>{t(lang, 'hero.info.audience')}</span>
        </div>
      </div>
    </div>
    
    <div class="hero-visual">
      <div class="hero-image">
        <div class="floating-card card-1">
          <i class="fab fa-aws"></i>
          <span>{t(lang, 'hero.cards.cloud')}</span>
        </div>
        <div class="floating-card card-2">
          <i class="fas fa-code"></i>
          <span>{t(lang, 'hero.cards.labs')}</span>
        </div>
        <div class="floating-card card-3">
          <i class="fas fa-network-wired"></i>
          <span>{t(lang, 'hero.cards.networking')}</span>
        </div>
        <div class="hero-illustration">
          <div class="cloud-icon">
            <i class="fas fa-cloud"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 80px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-hero);
    z-index: -2;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 50%, rgba(255, 153, 0, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 70% 80%, rgba(124, 90, 237, 0.1) 0%, transparent 50%);
    z-index: -1;
  }

  .hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(2px 2px at 20px 30px, rgba(255, 255, 255, 0.3), transparent),
      radial-gradient(2px 2px at 40px 70px, rgba(255, 153, 0, 0.4), transparent),
      radial-gradient(1px 1px at 90px 40px, rgba(255, 255, 255, 0.2), transparent);
    background-repeat: repeat;
    background-size: 150px 100px;
    animation: float 20s linear infinite;
    z-index: -1;
  }

  @keyframes float {
    0% { transform: translateY(0px) translateX(0px); }
    33% { transform: translateY(-10px) translateX(10px); }
    66% { transform: translateY(5px) translateX(-5px); }
    100% { transform: translateY(0px) translateX(0px); }
  }

  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-content {
    color: var(--aws-white);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 153, 0, 0.2);
    border: 1px solid var(--aws-orange);
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 2rem;
    backdrop-filter: blur(10px);
  }

  .hero-badge i {
    color: var(--aws-orange);
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--aws-white);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--aws-orange) 0%, var(--aws-coral) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 3rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 500px;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 1.8rem;
    font-weight: 800;
    color: var(--aws-orange);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 0.5rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .hero-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
  }

  .info-item i {
    color: var(--aws-orange);
    width: 16px;
  }

  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image {
    position: relative;
    width: 400px;
    height: 400px;
  }

  .floating-card {
    position: absolute;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--aws-white);
    font-weight: 600;
    font-size: 0.9rem;
    animation: floatCard 6s ease-in-out infinite;
  }

  .floating-card i {
    font-size: 1.2rem;
    color: var(--aws-orange);
  }

  .card-1 {
    top: 20%;
    left: -10%;
    animation-delay: 0s;
  }

  .card-2 {
    top: 60%;
    right: -10%;
    animation-delay: 2s;
  }

  .card-3 {
    bottom: 20%;
    left: 10%;
    animation-delay: 4s;
  }

  @keyframes floatCard {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(2deg);
    }
  }

  .hero-illustration {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(255, 153, 0, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cloud-icon {
    font-size: 4rem;
    color: var(--aws-orange);
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero {
      padding-top: 100px;
      min-height: 90vh;
    }

    .container {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .hero-stats {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .btn-large {
      width: 100%;
      max-width: 300px;
    }

    .hero-image {
      width: 300px;
      height: 300px;
    }

    .floating-card {
      font-size: 0.8rem;
      padding: 0.75rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-stats {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .hero-image {
      width: 250px;
      height: 250px;
    }

    .floating-card {
      display: none;
    }
  }
</style>
