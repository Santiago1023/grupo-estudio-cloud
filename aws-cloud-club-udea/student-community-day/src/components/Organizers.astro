<style>
  .organizers {
    padding: 5rem 0;
    background: var(--aws-white);
  }

  .organizers-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .organizer-card {
    background: var(--aws-white);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--aws-gray-light);
    transition: all 0.3s ease;
  }

  .organizer-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .organizer-image {
    width: 140px;
    height: 140px;
    margin: 0 auto 1rem;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid var(--aws-orange);
    position: relative;
  }

  .organizer-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .organizer-card:hover .organizer-image img {
    transform: scale(1.1);
  }

  .organizer-info h3 {
    color: var(--aws-navy);
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.3rem;
    line-height: 1.3;
  }

  .organizer-role {
    color: var(--aws-orange);
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    line-height: 1.2;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .organizers-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.3rem;
    }
  }

  @media (max-width: 900px) {
    .organizers-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.2rem;
    }
  }

  @media (max-width: 600px) {
    .organizers-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      max-width: 350px;
    }

    .organizer-card {
      padding: 1.2rem;
    }

    .organizer-image {
      width: 120px;
      height: 120px;
    }
  }
</style>