---
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url);
---

<section id="about" class="about">
  <div class="container">
    <div class="about-content">
      <div class="about-text">
        <div class="section-badge">
          <i class="fas fa-info-circle"></i>
          <span>{t(lang, 'about.badge')}</span>
        </div>
        
        <h2 class="section-title text-left">
          {t(lang, 'about.title')}
          <span class="gradient-text">{t(lang, 'about.titleHighlight')}</span>?
        </h2>
        
        <p class="about-description">
          {t(lang, 'about.description')}
        </p>
        
        <div class="about-features">
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-graduation-cap"></i>
            </div>
            <div class="feature-content">
              <h3>{t(lang, 'about.features.learn.title')}</h3>
              <p>{t(lang, 'about.features.learn.description')}</p>
            </div>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="feature-content">
              <h3>{t(lang, 'about.features.network.title')}</h3>
              <p>{t(lang, 'about.features.network.description')}</p>
            </div>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-certificate"></i>
            </div>
            <div class="feature-content">
              <h3>{t(lang, 'about.features.recognition.title')}</h3>
              <p>{t(lang, 'about.features.recognition.description')}</p>
            </div>
          </div>
        </div>
        
        <div class="about-cta">
          <a href="#tracks" class="btn btn-primary">
            <i class="fas fa-arrow-right"></i>
            {t(lang, 'about.buttons.exploreTracks')}
          </a>
          <a href="#speakers" class="btn btn-secondary">
            <i class="fas fa-microphone"></i>
            {t(lang, 'about.buttons.meetSpeakers')}
          </a>
        </div>
      </div>
      
      <div class="about-visual">
        <div class="visual-container">
          <div class="main-card">
            <div class="card-header">
              <div class="card-icon">
                <i class="fab fa-aws"></i>
              </div>
              <div class="card-title">
                <h4>Student Community Day</h4>
                <span class="badge badge-primary">{t(lang, 'about.card.freeEvent')}</span>
              </div>
            </div>
            
            <div class="event-details">
              <div class="detail-item">
                <i class="fas fa-calendar"></i>
                <div>
                  <strong>{t(lang, 'about.card.date')}</strong>
                  <span>September 13, 2025</span>
                </div>
              </div>
              
              <div class="detail-item">
                <i class="fas fa-clock"></i>
                <div>
                  <strong>{t(lang, 'about.card.time')}</strong>
                  <span>9:00 AM - 5:00 PM</span>
                </div>
              </div>
              
              <div class="detail-item">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                  <strong>{t(lang, 'about.card.venue')}</strong>
                  <span>EAFIT</span>
                </div>
              </div>
              
              <div class="detail-item">
                <i class="fas fa-users"></i>
                <div>
                  <strong>{t(lang, 'about.card.capacity')}</strong>
                  <span>150+ {t(lang, 'about.card.attendees')}</span>
                </div>
              </div>
            </div>
            
            <div class="card-highlights">
              <div class="highlight-tag">
                <i class="fas fa-check"></i>
                <span>{t(lang, 'about.card.highlights.tracks')}</span>
              </div>
              <div class="highlight-tag">
                <i class="fas fa-check"></i>
                <span>{t(lang, 'about.card.highlights.speakers')}</span>
              </div>
              <div class="highlight-tag">
                <i class="fas fa-check"></i>
                <span>{t(lang, 'about.card.highlights.labs')}</span>
              </div>
              <div class="highlight-tag">
                <i class="fas fa-check"></i>
                <span>{t(lang, 'about.card.highlights.networking')}</span>
              </div>
            </div>
          </div>
          
          <div class="floating-elements">
            <div class="floating-element element-1">
              <i class="fas fa-code"></i>
            </div>
            <div class="floating-element element-2">
              <i class="fas fa-cloud"></i>
            </div>
            <div class="floating-element element-3">
              <i class="fas fa-lightbulb"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background: var(--aws-white);
    position: relative;
    overflow: hidden;
  }

  .about::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--aws-gray), transparent);
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .about-description {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--aws-dark);
    margin-bottom: 3rem;
  }

  .about-features {
    margin-bottom: 3rem;
  }

  .feature-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--aws-gray-light);
    border-radius: 12px;
    border-left: 4px solid var(--aws-orange);
    transition: all 0.3s ease;
  }

  .feature-item:hover {
    transform: translateX(5px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .feature-icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    background: var(--gradient-secondary);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--aws-white);
    font-size: 1.2rem;
  }

  .feature-content h3 {
    font-size: 1.2rem;
    color: var(--aws-navy);
    margin-bottom: 0.5rem;
  }

  .feature-content p {
    color: var(--aws-dark);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }

  .about-cta {
    display: flex;
    gap: 1rem;
  }

  .visual-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .main-card {
    background: var(--aws-white);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--aws-gray-light);
    max-width: 350px;
    width: 100%;
    position: relative;
    z-index: 2;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .card-icon {
    width: 60px;
    height: 60px;
    background: var(--gradient-primary);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--aws-white);
    font-size: 1.5rem;
  }

  .card-title h4 {
    font-size: 1.1rem;
    color: var(--aws-navy);
    margin-bottom: 0.5rem;
  }

  .event-details {
    margin-bottom: 2rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: var(--aws-gray-light);
    border-radius: 8px;
  }

  .detail-item i {
    color: var(--aws-blue);
    width: 20px;
    text-align: center;
  }

  .detail-item div {
    display: flex;
    flex-direction: column;
  }

  .detail-item strong {
    font-size: 0.8rem;
    color: var(--aws-navy);
    font-weight: 600;
  }

  .detail-item span {
    font-size: 0.9rem;
    color: var(--aws-dark);
  }

  .card-highlights {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
  }

  .highlight-tag {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: var(--aws-dark);
  }

  .highlight-tag i {
    color: var(--aws-green);
    font-size: 0.7rem;
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .floating-element {
    position: absolute;
    width: 60px;
    height: 60px;
    background: var(--gradient-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--aws-white);
    font-size: 1.2rem;
    animation: floatElement 6s ease-in-out infinite;
    box-shadow: 0 10px 30px rgba(255, 153, 0, 0.3);
  }

  .element-1 {
    top: 10%;
    left: -5%;
    animation-delay: 0s;
  }

  .element-2 {
    top: 70%;
    right: -5%;
    animation-delay: 2s;
  }

  .element-3 {
    bottom: 10%;
    left: 10%;
    animation-delay: 4s;
  }

  @keyframes floatElement {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(180deg);
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .about-cta {
      flex-direction: column;
      align-items: flex-start;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .main-card {
      max-width: 100%;
    }

    .floating-element {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .feature-item {
      flex-direction: column;
      text-align: center;
    }

    .feature-icon {
      align-self: center;
    }

    .card-highlights {
      grid-template-columns: 1fr;
    }
  }
</style>
