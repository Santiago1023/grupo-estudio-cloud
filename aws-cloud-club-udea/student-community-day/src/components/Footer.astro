---
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url);
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <div class="brand-logo">
          <img src="/logo-blanco.png" alt="AWS Cloud Club" />
          <div class="brand-text">
            <span class="brand-title">AWS Cloud Club</span>
            <span class="brand-subtitle">Universidad de Antioquia</span>
          </div>
        </div>
        <p>{t(lang, 'footer.description')}</p>
        
        <div class="social-links">
          <a href="https://www.linkedin.com/in/santiago-bedoya-diaz/" target="_blank" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
          <a href="https://github.com/web3foru/grupo-estudio-cloud" target="_blank" aria-label="GitHub"><i class="fab fa-github"></i></a>
          <a href="https://www.instagram.com/web3foru/" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
        </div>
      </div>
      
      <div class="footer-links">
        <div class="link-group">
          <h4>{t(lang, 'footer.sections.event.title')}</h4>
          <ul>
            <li><a href="#about">{t(lang, 'footer.sections.event.about')}</a></li>
            <li><a href="#tracks">{t(lang, 'footer.sections.event.tracks')}</a></li>
            <li><a href="#speakers">{t(lang, 'footer.sections.event.speakers')}</a></li>
            <li><a href="#location">{t(lang, 'footer.sections.event.location')}</a></li>
          </ul>
        </div>
        
        <div class="link-group">
          <h4>{t(lang, 'footer.sections.community.title')}</h4>
          <ul>
            <li><a href="https://www.meetup.com/aws-cloud-club-at-universidad-de-antioquia/" target="_blank">{t(lang, 'footer.sections.community.meetup')}</a></li>
            <li><a href="https://chat.whatsapp.com/Jsch6Cgts8gE4eDvTapsuH" target="_blank">{t(lang, 'footer.sections.community.whatsapp')}</a></li>
            <li><a href="https://linktr.ee/awsugmed" target="_blank">{t(lang, 'footer.sections.community.awsug')}</a></li>
          </ul>
        </div>
        
        <div class="link-group">
          <h4>{t(lang, 'footer.sections.resources.title')}</h4>
          <ul>
            <li><a href="https://aws.amazon.com/free/" target="_blank">{t(lang, 'footer.sections.resources.freeTier')}</a></li>
            <li><a href="https://docs.aws.amazon.com/" target="_blank">{t(lang, 'footer.sections.resources.documentation')}</a></li>
            <li><a href="https://aws.amazon.com/certification/" target="_blank">{t(lang, 'footer.sections.resources.certification')}</a></li>
          </ul>
        </div>
        
        <div class="link-group">
          <h4>{t(lang, 'footer.sections.contact.title')}</h4>
          <ul>
            <li><a href="mailto:awscloudclubudea@gmail.com">{t(lang, 'footer.sections.contact.info')}</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>{t(lang, 'footer.copyright')}</p>
      <div class="footer-legal">
        <a href="#">{t(lang, 'footer.legal.privacy')}</a>
        <a href="#">{t(lang, 'footer.legal.terms')}</a>
        <a href="#">{t(lang, 'footer.legal.conduct')}</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--aws-navy);
    color: var(--aws-white);
    padding: 4rem 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .brand-logo img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .brand-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--aws-white);
    line-height: 1;
  }

  .brand-subtitle {
    font-size: 0.8rem;
    color: var(--aws-orange);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer-brand p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--aws-white);
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: var(--aws-orange);
    transform: translateY(-2px);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .link-group h4 {
    color: var(--aws-orange);
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .link-group ul {
    list-style: none;
    padding: 0;
  }

  .link-group li {
    margin-bottom: 0.5rem;
  }

  .link-group a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .link-group a:hover {
    color: var(--aws-orange);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .footer-legal a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.9rem;
  }

  .footer-legal a:hover {
    color: var(--aws-orange);
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-legal {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
