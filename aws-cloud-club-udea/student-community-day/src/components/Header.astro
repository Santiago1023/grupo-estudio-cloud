---
import { getCurrentLanguage, t } from '../i18n/utils';
import LanguageSelector from './LanguageSelector.astro';

const lang = getCurrentLanguage(Astro.url);
---

<header class="header">
  <nav class="navbar">
    <div class="container">
      <div class="nav-content">
        <div class="nav-brand">
          <a href="#home" class="brand-link">
            <img src="/aws-cloud-club.svg" alt="AWS Cloud Club" class="brand-logo" />
            <div class="brand-text">
              <span class="brand-title">Student Community Day</span>
              <span class="brand-subtitle">AWS Cloud Clubs</span>
            </div>
          </a>
        </div>
        
        <div class="nav-menu" id="nav-menu">
          <ul class="nav-list">
            <li class="nav-item">
              <a href="#home" class="nav-link">{t(lang, 'nav.home')}</a>
            </li>
            <li class="nav-item">
              <a href="#about" class="nav-link">{t(lang, 'nav.about')}</a>
            </li>
            <li class="nav-item">
              <a href="#tracks" class="nav-link">{t(lang, 'nav.tracks')}</a>
            </li>
            <li class="nav-item">
              <a href="#speakers" class="nav-link">{t(lang, 'nav.speakers')}</a>
            </li>
            <li class="nav-item">
              <a href="#sponsors" class="nav-link">{t(lang, 'nav.sponsors')}</a>
            </li>
            <li class="nav-item">
              <a href="#location" class="nav-link">{t(lang, 'nav.location')}</a>
            </li>
          </ul>
          
          <div class="nav-actions">
            <LanguageSelector />
            <a href="#register" class="btn btn-primary btn-compact">
              <i class="fas fa-ticket-alt"></i>
              {t(lang, 'nav.register')}
            </a>
          </div>
        </div>
        
        <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(35, 47, 62, 0.95);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header.scrolled {
    background: rgba(35, 47, 62, 0.98);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .navbar {
    padding: 0.6rem 0; /* Más compacto verticalmente */
  }

  .nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 48px; /* Altura fija más compacta */
    gap: 2rem; /* Espacio entre brand y menu */
  }

  .nav-brand {
    display: flex;
    align-items: center;
    flex-shrink: 0; /* No se encoge */
    min-width: 280px; /* Ancho mínimo para el brand */
  }

  .brand-link {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: var(--aws-white);
  }

  .brand-logo {
    width: 50px;
    height: 50px;
    object-fit: contain;
    flex-shrink: 0;
  }

  .brand-text {
    display: flex;
    flex-direction: column;
    min-width: 220px; /* Ancho mínimo para evitar wrap */
  }

  .brand-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--aws-white);
    line-height: 1.2;
    white-space: nowrap; /* Evita que se rompa la línea */
  }

  .brand-subtitle {
    font-size: 0.75rem;
    color: var(--aws-orange);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.2;
    white-space: nowrap; /* Evita que se rompa la línea */
  }

  .nav-menu {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex: 1; /* Toma el espacio disponible */
    justify-content: flex-end; /* Alinea a la derecha */
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: 1.2rem; /* Espaciado más compacto pero legible */
    margin: 0;
    padding: 0;
    align-items: center;
    flex-wrap: nowrap; /* No permite wrap */
  }

  .nav-link {
    color: var(--aws-white);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.85rem; /* Tamaño más compacto */
    padding: 0.4rem 0.2rem; /* Padding horizontal mínimo */
    position: relative;
    transition: all 0.3s ease;
    white-space: nowrap; /* Evita que se rompan las líneas */
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--aws-orange);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--aws-orange);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0; /* No se encoge */
  }

  /* Botón más compacto */
  .btn-compact {
    padding: 0.45rem 0.9rem;
    font-size: 0.8rem;
    height: auto;
    min-height: 34px;
    white-space: nowrap; /* Evita que se rompa el texto */
  }

  .btn-compact i {
    font-size: 0.75rem;
    margin-right: 0.4rem;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.4rem;
    gap: 3px;
  }

  .hamburger-line {
    width: 22px;
    height: 2px;
    background: var(--aws-white);
    transition: all 0.3s ease;
    border-radius: 1px;
  }

  .nav-toggle.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .nav-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .nav-toggle.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Responsive optimizado para mantener distribución horizontal */
  @media (max-width: 1200px) {
    .nav-list {
      gap: 1rem;
    }
    
    .nav-link {
      font-size: 0.8rem;
      padding: 0.4rem 0.1rem;
    }

    .brand-text {
      min-width: 200px;
    }

    .nav-brand {
      min-width: 250px;
    }
  }

  @media (max-width: 1024px) {
    .nav-list {
      gap: 0.8rem;
    }
    
    .nav-link {
      font-size: 0.75rem;
    }

    .brand-title {
      font-size: 1rem;
    }

    .brand-subtitle {
      font-size: 0.7rem;
    }

    .btn-compact {
      padding: 0.4rem 0.8rem;
      font-size: 0.75rem;
      min-height: 32px;
    }
  }

  @media (max-width: 900px) {
    .navbar {
      padding: 0.5rem 0;
    }

    .nav-toggle {
      display: flex;
    }

    .nav-menu {
      position: fixed;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--aws-navy);
      flex-direction: column;
      padding: 1.5rem;
      gap: 1rem;
      transform: translateY(-100vh);
      transition: transform 0.3s ease;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-menu.active {
      transform: translateY(0);
    }

    .nav-list {
      flex-direction: column;
      gap: 0.8rem;
      width: 100%;
    }

    .nav-link {
      padding: 0.8rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      width: 100%;
      font-size: 0.9rem;
    }

    .nav-actions {
      width: 100%;
      justify-content: center;
      margin-top: 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    /* En móvil mantenemos el brand visible pero más compacto */
    .brand-text {
      min-width: auto;
    }

    .brand-title {
      font-size: 0.95rem;
    }

    .brand-subtitle {
      font-size: 0.65rem;
    }

    .nav-brand {
      min-width: auto;
    }
  }

  @media (max-width: 480px) {
    .brand-text {
      display: none; /* Solo en pantallas muy pequeñas ocultamos el texto */
    }

    .brand-logo {
      width: 36px;
      height: 36px;
    }

    .nav-content {
      min-height: 44px;
    }
  }

  /* Para pantallas muy anchas, damos más espacio */
  @media (min-width: 1400px) {
    .nav-list {
      gap: 1.5rem;
    }
    
    .nav-menu {
      gap: 2rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }

    .brand-title {
      font-size: 1.2rem;
    }

    .brand-subtitle {
      font-size: 0.8rem;
    }
  }
</style>
