---
import { getCurrentLanguage, t } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url);
---

<section id="tracks" class="tracks">
  <div class="container">
    <div class="text-center">
      <div class="section-badge">
        <i class="fas fa-route"></i>
        <span>{t(lang, 'tracks.badge')}</span>
      </div>
      
      <h2 class="section-title">
        {t(lang, 'tracks.title')} <span class="gradient-text">{t(lang, 'tracks.titleHighlight')}</span>
      </h2>
      
      <p class="section-description">
        {t(lang, 'tracks.description')}
      </p>
    </div>
    
    <div class="tracks-grid">
      <!-- Track 1: Cloud Fundamentals -->
      <div class="track-card">
        <div class="track-header">
          <div class="track-icon track-icon-blue">
            <i class="fas fa-cloud"></i>
          </div>
          <div class="track-info">
            <h3>{t(lang, 'tracks.track1.title')}</h3>
            <span class="track-level">{t(lang, 'tracks.track1.level')}</span>
          </div>
          <div class="track-badge">
            <span class="badge badge-primary">{t(lang, 'tracks.track1.badge')}</span>
          </div>
        </div>
        
        <p class="track-description">
          {t(lang, 'tracks.track1.description')}
        </p>
        
        <div class="track-workshops">
          <h4>{t(lang, 'tracks.track1.workshops')}</h4>
          <div class="workshop-list">
            <div class="workshop-item">
              <i class="fas fa-play-circle"></i>
              <div>
                <strong>{t(lang, 'tracks.track1.items.intro.title')}</strong>
                <span>{t(lang, 'tracks.track1.items.intro.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-server"></i>
              <div>
                <strong>{t(lang, 'tracks.track1.items.ec2.title')}</strong>
                <span>{t(lang, 'tracks.track1.items.ec2.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-database"></i>
              <div>
                <strong>{t(lang, 'tracks.track1.items.storage.title')}</strong>
                <span>{t(lang, 'tracks.track1.items.storage.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-shield-alt"></i>
              <div>
                <strong>{t(lang, 'tracks.track1.items.security.title')}</strong>
                <span>{t(lang, 'tracks.track1.items.security.description')}</span>
              </div>
            </div>
          </div>
        </div>
        

      </div>
      
      <!-- Track 2: DevOps & Automation -->
      <div class="track-card">
        <div class="track-header">
          <div class="track-icon track-icon-purple">
            <i class="fas fa-briefcase"></i>
          </div>
          <div class="track-info">
            <h3>{t(lang, 'tracks.track2.title')}</h3>
            <span class="track-level">{t(lang, 'tracks.track2.level')}</span>
          </div>
          <div class="track-badge">
            <span class="badge badge-secondary">{t(lang, 'tracks.track2.badge')}</span>
          </div>
        </div>
        
        <p class="track-description">
          {t(lang, 'tracks.track2.description')}
        </p>
        
        <div class="track-workshops">
          <h4>{t(lang, 'tracks.track2.workshops')}</h4>
          <div class="workshop-list">
            <div class="workshop-item">
              <i class="fas fa-file-alt"></i>
              <div>
                <strong>{t(lang, 'tracks.track2.items.resume.title')}</strong>
                <span>{t(lang, 'tracks.track2.items.resume.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fab fa-linkedin"></i>
              <div>
                <strong>{t(lang, 'tracks.track2.items.profiles.title')}</strong>
                <span>{t(lang, 'tracks.track2.items.profiles.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-search"></i>
              <div>
                <strong>{t(lang, 'tracks.track2.items.jobsearch.title')}</strong>
                <span>{t(lang, 'tracks.track2.items.jobsearch.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-handshake"></i>
              <div>
                <strong>{t(lang, 'tracks.track2.items.interviews.title')}</strong>
                <span>{t(lang, 'tracks.track2.items.interviews.description')}</span>
              </div>
            </div>
          </div>
        </div>
        

      </div>
      
      <!-- Track 3: AI/ML & Data -->
      <div class="track-card">
        <div class="track-header">
          <div class="track-icon track-icon-green">
            <i class="fas fa-graduation-cap"></i>
          </div>
          <div class="track-info">
            <h3>{t(lang, 'tracks.track3.title')}</h3>
            <span class="track-level">{t(lang, 'tracks.track3.level')}</span>
          </div>
          <div class="track-badge">
            <span class="badge badge-success">{t(lang, 'tracks.track3.badge')}</span>
          </div>
        </div>
        
        <p class="track-description">
          {t(lang, 'tracks.track3.description')}
        </p>
        
        <div class="track-workshops">
          <h4>{t(lang, 'tracks.track3.workshops')}</h4>
          <div class="workshop-list">
            <div class="workshop-item">
              <i class="fas fa-sitemap"></i>
              <div>
                <strong>{t(lang, 'tracks.track3.items.architecture.title')}</strong>
                <span>{t(lang, 'tracks.track3.items.architecture.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-shield-alt"></i>
              <div>
                <strong>{t(lang, 'tracks.track3.items.security.title')}</strong>
                <span>{t(lang, 'tracks.track3.items.security.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-tachometer-alt"></i>
              <div>
                <strong>{t(lang, 'tracks.track3.items.optimization.title')}</strong>
                <span>{t(lang, 'tracks.track3.items.optimization.description')}</span>
              </div>
            </div>
            
            <div class="workshop-item">
              <i class="fas fa-rocket"></i>
              <div>
                <strong>{t(lang, 'tracks.track3.items.emerging.title')}</strong>
                <span>{t(lang, 'tracks.track3.items.emerging.description')}</span>
              </div>
            </div>
          </div>
        </div>
        

      </div>
    </div>
  </div>
</section>

<style>
  .tracks {
    background: var(--aws-gray-light);
    position: relative;
  }

  .tracks-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Forzar 3 columnas iguales */
    gap: 1.5rem;
    margin-top: 4rem;
    max-width: 1300px; /* Ancho total optimizado */
    margin-left: auto;
    margin-right: auto;
  }

  .track-card {
    background: var(--aws-white);
    border-radius: 16px;
    padding: 2rem; /* Padding balanceado */
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--aws-gray-light);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .track-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .track-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
    min-height: 80px; /* Altura mínima consistente */
  }

  .track-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: var(--aws-white);
    flex-shrink: 0;
    margin-top: 0.2rem; /* Alineación visual con el texto */
  }

  .track-icon-blue {
    background: var(--gradient-primary);
  }

  .track-icon-purple {
    background: var(--gradient-secondary);
  }

  .track-icon-green {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }

  .track-info {
    flex: 1;
    min-width: 0; /* Permite que el texto se ajuste */
  }

  .track-info h3 {
    font-size: 1.25rem; /* Tamaño optimizado para 3 columnas */
    color: var(--aws-navy);
    margin-bottom: 0.5rem;
    line-height: 1.2; /* Líneas más compactas */
    word-wrap: break-word;
    hyphens: none;
    font-weight: 700;
    min-height: 60px; /* Altura mínima para alineación */
    display: flex;
    align-items: center; /* Centrado vertical */
  }

  .track-level {
    font-size: 0.85rem;
    color: var(--aws-dark);
    font-weight: 600;
    white-space: nowrap; /* Evita que se rompa en múltiples líneas */
  }

  .track-badge {
    flex-shrink: 0;
    align-self: flex-start; /* Se alinea al inicio */
    margin-top: 0.2rem; /* Alineación visual */
  }

  /* Responsive adjustments for track headers */
  @media (max-width: 768px) {
    .track-header {
      min-height: 70px;
      gap: 0.8rem;
    }

    .track-icon {
      width: 50px;
      height: 50px;
      font-size: 1.3rem;
    }

    .track-info h3 {
      font-size: 1.2rem;
      line-height: 1.25;
    }

    .track-level {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .track-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
      min-height: auto;
      gap: 1rem;
    }

    .track-info {
      order: 2;
    }

    .track-badge {
      order: 1;
      align-self: center;
      margin-top: 0;
    }

    .track-icon {
      order: 0;
      margin-top: 0;
    }

    .track-info h3 {
      font-size: 1.1rem;
      text-align: center;
    }

    .track-level {
      text-align: center;
      white-space: normal; /* Permite wrap en móvil */
    }
  }

  .track-description {
    color: var(--aws-dark);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .track-workshops h4 {
    color: var(--aws-navy);
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .workshop-list {
    margin-bottom: 0;
  }

  .workshop-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 1rem;
    background: var(--aws-gray-light);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .workshop-item:hover {
    background: rgba(255, 153, 0, 0.1);
    transform: translateX(5px);
  }

  .workshop-item i {
    color: var(--aws-blue);
    font-size: 1.1rem;
    margin-top: 0.2rem;
    flex-shrink: 0;
  }

  .workshop-item div {
    display: flex;
    flex-direction: column;
  }

  .workshop-item strong {
    color: var(--aws-navy);
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
  }

  .workshop-item span {
    color: var(--aws-dark);
    font-size: 0.85rem;
    line-height: 1.4;
  }



  /* Badge Styles */
  .badge {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 20px;
    white-space: nowrap;
  }

  .badge-primary {
    background: var(--aws-blue);
    color: var(--aws-white);
  }

  .badge-secondary {
    background: var(--aws-orange);
    color: var(--aws-white);
  }

  .badge-success {
    background: #10b981;
    color: var(--aws-white);
  }

  /* Responsive Styles */
  @media (max-width: 1200px) {
    .tracks-grid {
      max-width: 1100px;
      gap: 1.2rem;
    }

    .track-card {
      padding: 1.8rem;
    }

    .track-info h3 {
      font-size: 1.15rem;
      min-height: 55px;
    }
  }

  @media (max-width: 1024px) {
    .tracks-grid {
      max-width: 950px;
      gap: 1rem;
    }

    .track-card {
      padding: 1.6rem;
    }

    .track-info h3 {
      font-size: 1.1rem;
      min-height: 50px;
    }
  }

  @media (max-width: 768px) {
    .tracks-grid {
      grid-template-columns: 1fr; /* Solo en móvil cambia a 1 columna */
      gap: 1.5rem;
      max-width: 500px;
    }

    .track-card {
      padding: 2rem;
    }

    .track-card.featured {
      transform: none;
    }



    .track-info h3 {
      font-size: 1.3rem;
      line-height: 1.25;
      min-height: auto; /* Sin altura mínima en móvil */
      display: block; /* Vuelve a display normal */
    }
  }

  @media (max-width: 480px) {
    .tracks-grid {
      max-width: 100%;
    }

    .track-card {
      padding: 1.5rem;
    }

    .track-info h3 {
      font-size: 1.2rem;
    }
  }
</style>
